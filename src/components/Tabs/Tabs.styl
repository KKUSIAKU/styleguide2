@import '../../theme/variables.styl';

.tabs-navigation ul
  box-shadow: 0 -1px 0 #ccc inset;

  li.tabs-menu-item
    padding: 0;
    margin: 0 20px 0 0;
    display: inline-block;
    line-height: 50px;
    a
      color: $color-text;
      line-height: 20px;
    &.is-active
      border-bottom: 1px solid $link-color;
      a
        color: $link-color;
