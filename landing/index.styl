// Hue Palette
.hue-palette
  border-radius: $border-radius
  color: #fff
  line-height: $line-height
  list-style: none
  margin: 0 0 20px 0
  padding: 0
  overflow: hidden
  text-transform: uppercase;
  font-family $font-family-mono

  li
    display: block
    overflow: hidden
    margin: 0
    padding: 20px

    strong
      float: right

  .hex
    float: left

  li:nth-child(1)
    background-color: rgba(white, .3)

  li:nth-child(2)
    background-color: rgba(white, .2)

  li:nth-child(3)
    background-color: rgba(white, .1)

  li:nth-child(5)
    background-color: rgba(black, .1)

  li:nth-child(6)
    background-color: rgba(black, .2)

  li:nth-child(7)
    background-color: rgba(black, .3)


.icon-box
  box-shadow: 0 0 10px rgba(0,0,0,.1)
  padding: 10px;
  min-width: 220px;
  max-width: 220px;
  float: left;
  margin-bottom: 20px;
  text-align: center;
  margin-right: 20px;
  svg
    width: 50px;
    height: 50px;

  strong
    display: block;
    height: 20px;

.playground
  margin-bottom: 50px;

  &:last-child
    margin-bottom: 0;

  :global
    .preview_code
      border-radius: 3px;
      overflow: hidden;
      padding: 30px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);

    h5
      margin-top: 0;

    hr
      margin: 10px 0 20px 0;

    button
      margin-right: 20px;

    .playgroundCode
      margin-top: 20px;

